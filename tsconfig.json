{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["esnext"]
  },
  "exclude": ["node_modules"],
  "paths": {
    "src/*": ["src/*"],
    "controller/*": ["src/controller/*"],
    "service/*": ["src/service/*"]
  }
  // "include": ["ormconfig.json"]
}
